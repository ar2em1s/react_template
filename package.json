{
  "name": "app_name",
  "version": "0.0.1",
  "description": "App description",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:server": "ts-node ./esbuild/server.build-config.ts",
    "build:css": "npx tailwindcss -i ./src/client/index.css -o ./build/public/static/tailwind.css",
    "build:client": "ts-node ./esbuild/client.build-config.ts",
    "dev:client": "ts-node ./esbuild/client.dev-config.ts",
    "dev:css": "npx tailwindcss -i ./src/client/index.css -o ./build/public/static/tailwind.css --watch",
    "dev:server": "ts-node ./esbuild/server.dev-config.ts",
    "dev:server-watch": "nodemon ./build/index.js --ignore src/client/ --ignore build/public/",
    "start": "npm-run-all --parallel dev:*",
    "serve": "ts-node ./build/index.js",
    "eslint": "eslint --ext .ts --ext .tsx ./{src,esbuild}",
    "eslint:fix": "eslint --fix --ext .ts --ext .tsx ./{src,esbuild}",
    "test:nowatch": "test --watchAll=false",
    "prepare": "husky install",
    "prepublish": "npm run eslint:fix"
  },
  "author": "ar2emis",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.8",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "servor": "^4.0.2",
    "tailwindcss": "^3.2.6",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}
